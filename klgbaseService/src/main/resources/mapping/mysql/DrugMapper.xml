<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jsg.dao.mysql.DrugMapper">
    <resultMap id="KlgbaseDrugMap" type="com.jsg.entity.Drug">
        <result property="id" column="id"/>
        <result property="catalogId" column="catalog_id"/>
        <result property="name" column="name"/>
        <result property="code" column="code"/>
        <result property="jxCode" column="jx_code"/>
        <result property="pcCode" column="pc_code"/>
        <result property="gyfsCode" column="gyfs_code"/>
        <result property="dcjl" column="dcjl"/>
        <result property="jldwCode" column="jldw_code"/>
        <result property="yysjCode" column="yysj_code"/>
        <result property="sysm" column="sysm"/>
        <result property="createTime" column="create_time" javaType="java.util.Date"/>
        <result property="updateTime" column="update_time" javaType="java.util.Date"/>
        <result property="createUserId" column="create_userId"/>
        <result property="updateUserId" column="update_userId"/>
    </resultMap>

    <delete id="del" parameterType="java.lang.Integer">
        delete from klgbase_drug
        where id = #{hospitalId,jdbcType=INTEGER}
    </delete>


    <insert id="add" parameterType="com.jsg.entity.Hospital" useGeneratedKeys="true" keyProperty="id">
        insert into
		klgbase_drug (
		id,
		catalog_id,
		name,
        code,
		jx_code,
		pc_code,
        gyfs_code,
		dcjl,
        jldw_code,
		yysj_code,
		sysm,
		create_time,
		update_time,
		create_userId,
		update_userId
        )
        values (
			#{id},
			#{catalogId},
			#{name},
			#{code},
			#{jxCode},
			#{pcCode},
			#{gyfsCode},
			#{dcjl},
			#{jldwCode},
			#{yysjCode},
			#{sysm},
			#{createTime},
			#{updateTime},
			#{createUserId},
			#{updateUserId}
        )
    </insert>


    <update id="edi" parameterType="com.jsg.entity.Hospital">
        update klgbase_drug
        <set>
            <if test="catalogId != null">
                catalog_id = #{catalogId },
            </if>
            <if test="name != null">
                name = #{name },
            </if>
            <if test="code != null">
                code = #{code },
            </if>
            <if test="jxCode != null">
                jx_code = #{jxCode },
            </if>
            <if test="pcCode != null">
                pc_code = #{pcCode },
            </if>
            <if test="gyfsCode != null">
                gyfs_code = #{gyfsCode },
            </if>
            <if test="dcjl != null">
                dcjl = #{dcjl },
            </if>
            <if test="jldwCode != null">
                jldw_code = #{jldwCode },
            </if>
            <if test="yysjCode != null">
                yysj_code = #{yysjCode },
            </if>
            <if test="sysm != null">
                sysm = #{sysm },
            </if>
            <if test="createTime != null">
                create_time = #{createTime },
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime },
            </if>
            <if test="createUserId != null">
                create_userId = #{createUserId },
            </if>
            <if test="updateUserId != null">
                update_userId = #{updateUserId },
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>


</mapper>